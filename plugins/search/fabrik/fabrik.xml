<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<extension group="search" method="upgrade" type="plugin" version="4">
  <name>plg_fabrik_search</name>
  <author>Fabrikar</author>
  <creationDate>2024-10-17</creationDate>
  <copyright>Copyright (C) 2005-2024 Fabrikar - All rights reserved.</copyright>
  <license>GNU General Public License version 3 or later; see software_license.txt</license>
  <authorEmail>team@fabrikar.com</authorEmail>
  <authorUrl>https://www.fabrikar.com</authorUrl>
  <version>4.4</version>
  <description>PLG_FABRIK_SEARCH_DESCRIPTION</description>
  <files>
    <filename plugin="fabrik">fabrik.php</filename>
    <folder>language</folder>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="search_limit" type="text" default="50" description="Number of Search items to return" label="Search Limit" size="5"></field>
        <field name="search_section_heading" default="Fabrik/record" type="text" description="Appears in search results, under the title." label="Section heading" size="15"></field>
        <field name="include_list_title" type="radio" class="btn-group" default="1" layout="joomla.form.field.radio.switcher" label="Include list title in heading">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
      </fieldset>
    </fields>
  </config>
</extension>
